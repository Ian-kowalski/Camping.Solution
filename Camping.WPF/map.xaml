<UserControl x:Class="camping.WPF.map"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:camping.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid x:Name="campingmap" Background="DarkGray">
            <Line X1="10" Y1="60" X2="790" Y2="60" Stroke="PaleGoldenrod" StrokeThickness="4"/>

            <Line X1="50" Y1="440" X2="50" Y2="60" Stroke="DarkSeaGreen" StrokeThickness="4" />
            <Line X1="50" Y1="300" X2="300" Y2="250" Stroke="DarkSeaGreen" StrokeThickness="4"/>


            <Line X1="775" Y1="150" X2="275" Y2="150" Stroke="DeepPink" StrokeThickness="4"/>
            <Line X1="300" Y1="250" X2="250" Y2="60" Stroke="DeepPink" StrokeThickness="4" />
            
            <Line X1="750" Y1="300" X2="300" Y2="250" Stroke="Magenta" StrokeThickness="4"/>
            <Line X1="150" Y1="403" X2="450" Y2="266" Stroke="Magenta" StrokeThickness="4"/>

        </Grid>
    </Grid>
</UserControl>
